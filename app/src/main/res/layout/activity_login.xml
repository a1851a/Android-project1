<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="198dp"
        android:layout_height="192dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/login_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/login_google"
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:layout_marginTop="288dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_login_google"
        app:layout_constraintBottom_toTopOf="@+id/login_fb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/login_fb"
        android:layout_width="407dp"
        android:layout_height="81dp"
        android:layout_marginTop="376dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_login_fb"
        app:layout_constraintBottom_toTopOf="@+id/login_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/login_line"
        android:layout_width="407dp"
        android:layout_height="81dp"
        android:layout_marginTop="464dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_login_line"
        app:layout_constraintBottom_toTopOf="@+id/login_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/login_title"
        android:layout_width="320dp"
        android:layout_height="113dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>