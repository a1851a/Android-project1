<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rapid_test.Part2Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rapidtest_title"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@color/green"
            android:text="第二部分"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rapidtest_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/text_sleepstarttime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:text="睡覺時間:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnersleepstarttime"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:entries="@array/sleepstarttime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_sleeptime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="睡眠時長:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnersleeptime"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:entries="@array/sleeptime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_activitytime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="當天活動時間:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinneractivitytime"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:entries="@array/activitytime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_phonetime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="睡前使用手機時間:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerphonetime"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:entries="@array/phonetime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_noise"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="睡眠環境吵雜度:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnernoise"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:entries="@array/noise"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_comfortable"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="您的床墊枕頭軟硬度:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnercomfortable"
                    android:background="@color/white"
                    android:textAlignment="center"
                    android:entries="@array/comfortable"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                android:id="@+id/text_tired"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="您的起床疲累度:(1為最累)"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_tirednumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/seekBartired"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:max="6"
                    android:min="1" />

                <Button
                android:id="@+id/submit2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/orange"
                android:text="提交"
                android:textSize="30sp"
                android:layout_gravity="center" />

            </LinearLayout>

    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>